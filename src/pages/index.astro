---
import Layout from '@/Layout.astro'
import Landing from '@/components/Landing.svelte'
---

<Layout>
  <main>
    <Landing client:only="svelte" />
  </main>
  <footer class="disclaimer-footer">
    <p>
      Disclaimer: CHILLDUMP is a memecoin project for entertainment purposes only. Do Your Own Research (DYOR). Not Financial Advice (NFA).
    </p>
  </footer>
</Layout>

<style>
  main {
    width: 100%;
    min-height: 100vh;
  }
  .disclaimer-footer {
    padding: 10px;
    background: #000;
    text-align: center;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
  }
  .disclaimer-footer p {
    margin: 0;
    font-size: 12px;
    color: rgba(255, 255, 255, 0.4);
    font-family: sans-serif;
    letter-spacing: 1px;
    text-transform: uppercase;
    margin: 0 auto;
  }
</style>
