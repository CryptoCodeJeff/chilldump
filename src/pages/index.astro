---
import Layout from '@/Layout.astro'
import Game from '@/components/Game.svelte'
---

<style lang="scss">
  h1 {
    position: absolute;
    display: flex;
    flex-direction: column;
    top: 350px;
    left: 350px;
    color: white;
    font-size: 80px;
    font-weight: bold;
    text-shadow: 5px 5px 0px black;

    span {
      font-size: 120px;
    }
  }

  .banner {
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;

    img {
      opacity: 0.4;
      width: 100%;
      height: 100dvh;
      object-fit: cover;
    }
  }

  .game-section {
    padding: 4rem 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    background: #111;
  }
</style>

<Layout>
  <div class="banner">
    <img src="/city.png" alt="" />
    <h1>The dumpest way<span> to make money.</span></h1>
  </div>

  <section class="game-section">
    <Game client:only="svelte" />
  </section>
</Layout>
